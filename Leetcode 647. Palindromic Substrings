class Solution {
private:
    bool solve(string str){
      
        int s = 0;
        int e = str.size() - 1;
        
        while(s <= e){
            
            if(str[s++] != str[e--]){
                return false;
            }
        }
        
        return true;
    }
public:
    int countSubstrings(string s) {
        
        int ans = 0;
        
        
        for(int i = 0 ; i < s.size() ; i++){
            
            string str = "";
            
            for(int j = i ; j < s.size() ; j++){
                str += s[j];
                
            
                if(solve(str)){
                    ans++;
                }
            }
        }
        
        return ans;
    }
};
